<%= form_for @card, html: {class: "form-horizontal"} do |f| %>


  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>
      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="control-group">
    <%= f.label "Лицевая сторона карточки", class: "control-label" %>
    <div class="controls">
      <%= f.text_area :first_side, :autofocus => true %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label "Задняя сторона карточки", class: "control-label" %>
    <div class="controls">
      <%= f.text_area :second_side %>
    </div>
  </div>


  <% unless params[:action] == 'new' %>
    <div class="control-group">
      <%= f.label "Рейтинг", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :rating %>
      </div>
    </div>
  <% end %>


  <div class="control-group">
    <div class="controls">
      <%= f.submit "Сохранить", class: "btn btn-primary" %>
    </div>
  </div>


<% end %>
